<?xml version="1.0" ?>
<project name ="AntTest" default="run" basedir=".">

	 <!-- 定义全局变量 -->
	<property name="dest" value="./build/classes" />
	<property name="testng.output.dir" value="./test-output"/>

	<!-- 定义类路径 -->
	<path id="classes">
	     <fileset dir="lib" includes="*.jar"/>
		 <pathelement location="${dest}"/>
	</path>

  <taskdef resource="testngtasks" classpath="lib/testng-6.8.jar"/>  
	

	
	 <target name="run"  depends ="compile">
	 	<testng outputdir="${testng.report.dir}" classpathref="classes" >
	 	   <xmlfileset dir="." includes="testng.xml"/>
	 	</testng>

	    	
	    	
	    </target>
	<target name="clean">
        <delete dir="${basedir}/build"/>
    </target>
	
    <target name="compile"  depends ="clean">
        <mkdir dir ="${dest}"/>
        <javac srcdir ="${basedir}/src" destdir ="${dest}" includeantruntime="on"/>
    </target>
	
</project>